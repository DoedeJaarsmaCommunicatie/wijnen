{% set _types = term.posts({
    posts_per_page: -1,
    orderby: 'title',
    order: 'ASC',
    post_type: 'druif'
}, 'druif') %}
{% if _types %}
    <!-- Druiven gebruikt in {{ term.name }} -->
    <section class="container mx-auto px-4 lg:px-0 py-4 content">
        <h2>{{ __('Deze druiven groeien in %s')|format(term.name) }}</h2>
        <ul>
            {% for type in _types %}
                <li>
                    <article>
                        <a href="{{ type.link }}" title="{{ __('Wijnen met de druif %s')|format(type.post_title) }}">
                            {{ type.post_title }}
                        </a>
                    </article>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endif %}
