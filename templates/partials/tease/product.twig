{% set _product = fn('wc_get_product', product.ID) %}
{% from "macro/add-to-cart.twig" import add_to_cart %}
{% from 'macro/products/images.macro.twig' import product_image %}

<article class="product-card">
    <span class="product-label" hidden>&euro; {{ _product.get_price }}</span>
    <a href="{{ product.link }}" class="product-image-wrapper" title="Bekijk {{ _name }}">
        {{ product_image(product) }}
{#        <img src="#"#}
{#             data-lazy="{{ product.thumbnail.src('medium') }}"#}
{#             data-srcset="{{  }}"#}
{#             alt="{{ product.thumbnail.alt }}" class="product-image lazy-load-me">#}
    </a>
    <h2 class="product-title">
        <a href="{{ product.link }}" title="Bekijk {{ _name }}">{{ product.name }}</a>
    </h2>
    <div class="product-content content">
        <p class="product-content_attributes">
            <span>Streek: {{ _product.get_attribute('pa_streek') }}</span>
            <span>Jaargang: {{ _product.get_attribute('pa_jaar') }}</span>
            <span>Druiven: {{ _product.get_attribute('pa_druif') }}</span>
        </p>

        {{ product.content|excerpt(15) }} <a href="{{ product.link }}" title="Bekijk {{ _name }}">Lees meer</a>
    </div>
    <span class="product-price">{{ _product.get_price_html }}</span>
    {{ add_to_cart(product.ID, 'ml-auto mt-auto product-add-to-cart', 'qty', 'small') }}
</article>
