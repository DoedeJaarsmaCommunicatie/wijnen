    <p>{{ theme.theme_mod('address', 'Lauriergracht 54 BG <br> (afhalen op afspraak)')}}</p>
    <p>{{ theme.theme_mod('postalcode', '1016RL')}} {{ theme.theme_mod('city', 'Amsterdam')}}</p>
