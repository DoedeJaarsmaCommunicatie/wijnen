    <p><a href="mailto:{{ theme.theme_mod('email', 'info@wijnclubamsterdam.nl') }}">{{ theme.theme_mod('email', 'info@wijnclubamsterdam.nl')}}</a></p>
    {% do action('winc/footer/address/post') %}
